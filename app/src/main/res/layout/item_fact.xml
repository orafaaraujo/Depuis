<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.orafaaraujo.depuis.viewModel.FactViewModel"/>
    </data>


    <LinearLayout
        android:id="@+id/item_fact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/item_fact_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.factTitle}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="This day! "/>

                <TextView
                    android:id="@+id/item_fact_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_fact_title"
                    android:text="@{viewModel.factComment}"
                    tools:text="This day was very crazy!!!!"/>

                <TextView
                    android:id="@+id/item_fact_current_time"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_fact_comment"
                    android:text="@{viewModel.factCurrentTime}"
                    android:textSize="22sp"
                    tools:text="5d 8h"/>

                <TextView
                    android:id="@+id/item_fact_begin"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_fact_current_time"
                    android:text="@{viewModel.factBegin}"
                    android:textSize="12sp"
                    tools:text="12/12/2017 - 20:20"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>