<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.orafaaraujo.depuis.viewmodel.FactViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/item_fact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@{viewModel.cardClosedBackground}">

        <TextView
            android:id="@+id/item_fact_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/item_fact_close"
            android:layout_toStartOf="@id/item_fact_close"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:text="@{viewModel.factBegin}"
            android:textSize="12sp"
            tools:drawableLeft="@drawable/ic_access_time_22dp"
            tools:text="12/12/2017 - 20:20"
            tools:text_font="@{`raleway-regular`}"
            tools:text_icon="@{viewModel.beginIcon}" />

        <ImageButton
            android:id="@id/item_fact_close"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/white_button"
            android:contentDescription="@string/main_stop"
            android:onClick="@{viewModel.onCloseFact}"
            tools:source="@{viewModel.cardClosedIcon}"
            tools:src="@drawable/ic_close_22dp"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/item_fact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fact_begin"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@{viewModel.factTitle}"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="This day! "
            tools:text_font="@{`raleway-medium`}" />

        <TextView
            android:id="@+id/item_fact_current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fact_title"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@{viewModel.factCurrentTime}"
            android:textColor="@color/main_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="5d 8h"
            tools:text_font="@{`raleway-black`}" />

        <TextView
            android:id="@+id/item_fact_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fact_current_time"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@{viewModel.factComment}"
            android:visibility="@{TextUtils.isEmpty(viewModel.factComment) ? View.GONE : View.VISIBLE}"
            tools:text="This day was very crazy!!!!"
            tools:text_font="@{`raleway-regular`}" />

        <Button
            android:id="@+id/item_fac_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_fact_comment"
            android:background="@drawable/white_button"
            android:onClick="@{viewModel.onClickShare()}"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:text="@string/main_button_share"
            android:textColor="@color/main_primary"
            android:textSize="12sp"
            tools:drawableLeft="@drawable/ic_share_18dp"
            tools:text_font="@{`raleway-regular`}"
            tools:text_icon="@{viewModel.shareIcon}" />
    </RelativeLayout>
</layout>