<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_main_empty_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/main_empty_list_title"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text_font="@{`raleway-regular`}" />

        <TextView
            android:id="@+id/activity_main_empty_list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="@string/main_empty_list_subtitle" />

        <Button
            android:id="@+id/activity_main_empty_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/white_button_red_border"
            android:elevation="8dp"
            android:onClick="@{click}"
            android:text="@string/main_empty_list_new_button"
            android:textColor="@color/main_accent"
            tools:targetApi="lollipop" />

    </LinearLayout>
</layout>